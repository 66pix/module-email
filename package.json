    "nodemailer": "^2.3.2",
    "nodemailer-stub-transport": "^1.0.0",
    "nunjucks": "^2.4.2",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "code": "^2.3.0",
    "coverage-average": "^1.0.4",
    "istanbul": "^0.4.3",
    "mailparser": "^0.5.3",
    "mocha": "^2.4.5",
    "tsd": "^0.6.5",
    "tslint": "^3.9.0",
    "typescript": "^1.8.10",
