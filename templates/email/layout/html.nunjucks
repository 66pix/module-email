<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>{{ subject }}</title>
  </head>

  <body itemscope itemtype="http://schema.org/EmailMessage" class="bg">

    <table class="body-wrap">
      <tr>
        <td class="header dark-bg">
          <table width="100%">
            <tr>
              <td class="alignleft">
                <a href="{{ baseUrl }}"><img src="{{ baseUrl }}/images/logo/logo-80x80@2x.png" width="80" height="80" alt="66pix" /></a>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td class="container" width="680">
          <div class="content">
            <table width="100%" cellpadding="0" cellspacing="0">
              {{ html | safe }}
            </table>
          </div>
          <div class="footer ">
            <table width="100%">
              <tr>
                <td class="alignleft">
                  <div class="content">
                    <p>Kind regards,</p>
                    <p>The team at <a href="{{ baseUrl }}">66pix</a></p>
                  </div>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
      <tr>
        <td class="footer-bottom dark-bg"></td>
      </tr>
    </table>
  </body>
</html>
